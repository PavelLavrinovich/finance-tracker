<% if @stock %>
  <div class="well results-block col-md-6">
    <div>
      <p>
        Ticker: <%= @stock.ticker %>
      </p>
      <p>
        Name: <%= @stock.name %>
      </p>
      <p>
        Price: <%= @stock.price %>
      </p>
    </div>
    <div>
      <% if current_user.stock_already_added?(@stock.ticker) %>
        <p>
          Tracking
        </p>
      <% else %>
        <%= link_to 'Track', user_stocks_path(stock_ticker: @stock.ticker), class: 'btn btn-primary', method: :post %>
      <% end %>
    </div>
  </div>
<% end %>